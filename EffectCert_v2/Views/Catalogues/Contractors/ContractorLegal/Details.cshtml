@using EffectCert.ViewModels.Contractors;

@model EffectCert.ViewModels.Contractors.ContractorLegalViewModel

<h3>@ViewBag.Title</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BIN)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BIN)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RegAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegAddress!.Country),
            @Html.DisplayFor(model => model.RegAddress!.AddressLine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FactAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => (model.FactAddress ?? new AddressViewModel()).Country),
            @Html.DisplayFor(model => (model.FactAddress ?? new AddressViewModel()).AddressLine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => (model.BankAccount ?? new BankAccountViewModel()).IIK)<br>
            @Html.DisplayFor(model => (model.BankAccount ?? new BankAccountViewModel()).BIK)<br>
            @Html.DisplayFor(model => (model.BankAccount ?? new BankAccountViewModel()).BankName)<br>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employees.Count)<br>
            @foreach (var employee in Model.Employees)
            {
                <div>@employee.ContractorIndividual?.LastName @employee.ContractorIndividual?.FirstName</div>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
