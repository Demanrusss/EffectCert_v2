@model EffectCert.ViewModels.Contractors.ContractorLegalEmployeeViewModel

<h3>@ViewBag.Title</h3>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContractorIndividual)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContractorIndividual!.LastName)<br>
            @Html.DisplayFor(model => model.ContractorIndividual!.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsManager)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsManager)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
