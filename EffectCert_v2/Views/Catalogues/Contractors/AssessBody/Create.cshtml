@model EffectCert.ViewModels.Contractors.AssessBodyViewModel

<h3>@ViewBag.Title</h3>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required id="name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortName" class="control-label"></label>
                <input asp-for="ShortName" class="form-control" required id="shortname" />
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractorLegal" class="control-label"></label>
                <input asp-for="ContractorLegal" class="form-control" required id="contractorlegal" />
                <span asp-validation-for="ContractorLegal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" required id="address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Attestate" class="control-label"></label>
                <input asp-for="Attestate" class="form-control" required id="attestate" />
                <span asp-validation-for="Attestate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Attestate" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="Attestate" class="form-control js-example-basic-single" asp-items="@ViewBag.Attestates" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="">Выберите аттестат</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="Attestates" asp-action="Create" onmouseover="StartAnimation(this)" onmouseout="StopAnimation(this)" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="Attestates" asp-action="Edit" asp-route-id="" id="AttestateIdEdit" onmouseover="StartAnimation(this)" onmouseout="StopAnimation(this)" hidden><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="Attestates" asp-action="Details" asp-route-id="" id="AttestateIdDetails" onmouseover="StartAnimation(this)" onmouseout="StopAnimation(this)" hidden><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="Attestates" asp-action="Delete" asp-route-id="" id="AttestateIdDelete" onmouseover="StartAnimation(this)" onmouseout="StopAnimation(this)" hidden><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="Attestate" class="text-danger" id="AttestateIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssessBodyEmployees" class="control-label"></label>
                <input asp-for="AssessBodyEmployees" class="form-control" required id="assessbodyemployees" />
                <span asp-validation-for="AssessBodyEmployees" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
