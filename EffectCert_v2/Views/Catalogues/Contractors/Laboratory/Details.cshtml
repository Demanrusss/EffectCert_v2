@using EffectCert.ViewModels.Documents;

@model EffectCert.ViewModels.Contractors.LaboratoryViewModel

<h3>@ViewBag.Title</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContractorLegal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContractorLegal.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Attestate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => (model.Attestate ?? new AttestateViewModel()).Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LaboratoryEmployees)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LaboratoryEmployees.Count)<br>
            @foreach (var employee in Model.LaboratoryEmployees)
            {
                @employee.ContractorLegalEmployee.ContractorIndividual.LastName @employee.ContractorLegalEmployee.ContractorIndividual.FirstName.FirstOrDefault()<p>.</p><br>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
