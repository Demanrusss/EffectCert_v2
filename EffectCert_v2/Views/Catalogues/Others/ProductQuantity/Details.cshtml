@model EffectCert.ViewModels.Others.ProductQuantityViewModel

<h3>@ViewBag.Title</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeasurementUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeasurementUnit!.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MadeDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MadeDate.ToShortDateString())
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
