@model EffectCert.ViewModels.Main.SelectProductsActViewModel

<h3>@ViewBag.Title</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" required id="number" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" required id="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="ApplicationId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.Application?.Id">@Model.Application?.Number</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="Application" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="Application" asp-action="Edit" asp-route-id="" id="ApplicationIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="Application" asp-action="Details" asp-route-id="" id="ApplicationIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="Application" asp-action="Delete" asp-route-id="" id="ApplicationIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ApplicationId" class="text-danger" id="ApplicationIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionPlan" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="ActionPlanId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.ActionPlan?.Id">@Model.ActionPlan?.Number</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="ActionPlan" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="ActionPlan" asp-action="Edit" asp-route-id="" id="ActionPlanIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="ActionPlan" asp-action="Details" asp-route-id="" id="ActionPlanIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="ActionPlan" asp-action="Delete" asp-route-id="" id="ActionPlanIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ActionPlanId" class="text-danger" id="ActionPlantIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="AddressId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.Address?.Id">@Model.Address?.AddressLine</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="Address" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="Address" asp-action="Edit" asp-route-id="" id="AddressIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="Address" asp-action="Details" asp-route-id="" id="AddressIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="Address" asp-action="Delete" asp-route-id="" id="AddressIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="AddressId" class="text-danger" id="AddressIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supplier" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="SupplierId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.Supplier?.Id">@Model.Supplier?.ShortName</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="ContractorLegal" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Edit" asp-route-id="" id="SupplierIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Details" asp-route-id="" id="SupplierIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Delete" asp-route-id="" id="SupplierIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="SupplierId" class="text-danger" id="SupplierIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="StorageCondition" class="control-label"></label>
                <input asp-for="StorageCondition" class="form-control" required id="storageCondition" />
                <span asp-validation-for="StorageCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageType" class="control-label"></label>
                <input asp-for="PackageType" class="form-control" required id="packageType" />
                <span asp-validation-for="PackageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ControlSamplesStorageTime" class="control-label"></label>
                <input asp-for="ControlSamplesStorageTime" class="form-control" required id="controlSamplesStorageTime" />
                <span asp-validation-for="ControlSamplesStorageTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ControlSamplesQuantity" class="control-label"></label>
                <input asp-for="ControlSamplesQuantity" class="form-control" required id="controlSamplesQuantity" />
                <span asp-validation-for="ControlSamplesQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedProducts" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="SelectedProductsIds" class="form-control js-example-basic-multiple" required>
                        @foreach (var selectedProduct in Model.SelectedProducts)
                        {
                            <option value="@selectedProduct.Id">@selectedProduct.ProductQuantity?.Product?.Model, @selectedProduct.Quantity из @selectedProduct.ProductQuantity?.Quantity</option>
                        }
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="SelectedSampleQuantity" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="SelectedProductsIds" class="text-danger" id="SelectedProductsIdsWarning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CreateScriptsPartial");}
    @{await Html.RenderPartialAsync("_MainViewScripts");}
    <script>
        $(document).ready(function () {
            let selectElements = [
                { id: '#ApplicationId', url: '/Application/GetApplications/', placeholder: 'Выберите заявку' },
                { id: '#ActionPlanId', url: '/ActionPlan/GetActionPlans/', placeholder: 'Выберите план действий' },
                { id: '#AddressId', url: '/Address/GetAddresses/', placeholder: 'Выберите адрес' },
                { id: '#SupplierId', url: '/ContractorLegal/GetContractorLegals/', placeholder: 'Выберите поставщика' },
                { id: '#SelectedProductsIds', url: '/SelectedSampleQuantity/GetSelectedSampleQuantities/', placeholder: 'Выберите отобранную продукцию' }
            ];

            establishSelect2Algorithm(selectElements);
        });
    </script>
}
