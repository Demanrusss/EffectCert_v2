@model EffectCert.ViewModels.Main.SelectProductsActViewModel

<h3>@ViewBag.Title</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application)
        </dt>
        <dd class="col-sm-10">
            №@Html.DisplayFor(model => model.Application.Number) от @Html.DisplayFor(model => model.Application.Date.ToShortDateString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActionPlan)
        </dt>
        <dd class="col-sm-10">
            №@Html.DisplayFor(model => model.ActionPlan.Number) от @Html.DisplayFor(model => model.ActionPlan.Date.ToShortDateString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.AddressLine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Supplier.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StorageCondition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StorageCondition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PackageType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PackageType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ControlSamplesStorageTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ControlSamplesStorageTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ControlSamplesQuantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ControlSamplesQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class="col-sm-10">
        @foreach (var product in Model.Products)
        {
            @Html.DisplayFor(model => product.Product.Name)<br>
        }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
