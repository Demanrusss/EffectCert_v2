@model EffectCert.ViewModels.Main.ApplicationViewModel

<h3>@ViewBag.Title</h3>

<hr />
<div class="row">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-md-5">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" required id="number" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" required id="date" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="ElectronicNumber" class="control-label"></label>
                <input asp-for="ElectronicNumber" class="form-control" id="electronicNumber" />
                <span asp-validation-for="ElectronicNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="ElectronicDate" class="control-label"></label>
                <input asp-for="ElectronicDate" class="form-control" id="electronicdate" type="date" />
                <span asp-validation-for="ElectronicDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="AssessBody" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="AssessBodyId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.AssessBody?.Id" selected>@Model.AssessBody?.ShortName</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="AssessBody" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Edit" asp-route-id="@Model.AssessBody?.Id" id="AssessBodyIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Details" asp-route-id="@Model.AssessBody?.Id" id="AssessBodyIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Delete" asp-route-id="@Model.AssessBody?.Id" id="AssessBodyIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="AssessBodyId" class="text-danger" id="AssessBodyIdWarning"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="ContractorLegal" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="ContractorLegalId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.ContractorLegal?.Id" selected>@Model.ContractorLegal?.ShortName</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="ContractorLegal" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Edit" asp-route-id="@Model.ContractorLegal?.Id" id="ContractorLegalIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Details" asp-route-id="@Model.ContractorLegal?.Id" id="ContractorLegalIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Delete" asp-route-id="@Model.ContractorLegal?.Id" id="ContractorLegalIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ContractorLegalId" class="text-danger" id="ContractorLegalIdWarning"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Schema" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="SchemaId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this), hidePartyOrSerial(this)" required>
                            <option value="@Model.Schema?.Id" selected>@Model.Schema?.Name</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Schema" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="Schema" asp-action="Edit" asp-route-id="@Model.Schema?.Id" id="SchemaIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="Schema" asp-action="Details" asp-route-id="@Model.Schema?.Id" id="SchemaIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="Schema" asp-action="Delete" asp-route-id="@Model.Schema?.Id" id="SchemaIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="SchemaId" class="text-danger" id="SchemaIdWarning"></span>
            </div>
            <div class="form-group serial col-md-5" @Html.Raw(Model.Products.Count > 0 ? String.Empty : "hidden")>
                <label asp-for="Products" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="ProductsIds" class="form-control js-example-basic-multiple" required>
                            @foreach (var product in Model.Products)
                            {
                                <option value="@product.Id" selected>@product.Name, @product.Model</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Product" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ProductsIds" class="text-danger" id="ProductsIdsWarning"></span>
            </div>
            <div class="form-group party col-md-5" @Html.Raw(Model.ProductQuantities.Count > 0 ? String.Empty : "hidden")>
                <label asp-for="ProductQuantities" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="ProductQuantitiesIds" class="form-control js-example-basic-single" required>
                        @foreach (var productQuantity in Model.ProductQuantities)
                        {
                            <option value="@productQuantity.Id" selected>@productQuantity.Product?.Name, @productQuantity.Product?.Model, @productQuantity.Quantity, @productQuantity.MeasurementUnit?.ShortName</option>
                        }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="ProductQuantity" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ProductQuantitiesIds" class="text-danger" id="ProductQuantitiesIdsWarning"></span>
            </div>
            <br>
            <div class="form-group row col-md-12" id="tableTemplateTechReg">
                <div class="row align-content-md-start">
                    <div class="col-md col-md-2">
                        <label asp-for="TechRegParagraphs" class="control-label"></label>
                    </div>
                    <div class="col-md-3">
                        <div class="btn-sm btn-success col-md-3" onclick="addTechReg()" onmouseover="" style="cursor: pointer;">Добавить</div>
                    </div>
                </div>
                @{
                    int techRegCounter = 0;

                    if (Model.TechRegParagraphs.Count == 0)
                        Model.TechRegParagraphs.Add(new EffectCert.ViewModels.Main.TechRegParagraphsViewModel());

                    foreach (var techReg in Model.TechRegParagraphs)
                    {
                        string rowTemplateTechReg = "rowTemplateTechReg" + (techRegCounter == 0 ? String.Empty : techRegCounter.ToString());
                        string TechRegParagraphs_TechRegId = $"TechRegParagraphs{techRegCounter}TechRegId";
                        string TechRegParagraphs_Paragraphs = $"TechRegParagraphs{techRegCounter}Paragraphs";
                        <div class="row align-content-between" id="@rowTemplateTechReg">
                            <div class="row align-content-between">
                                <div class="col-md-6">
                                @if(techRegCounter > 0)
                                {
                                        <div deletebtnptr="TechRegDeleteBtn" class="btn btn-close btn-danger col-md-1" onmouseover="" style="cursor: pointer;" onclick="deleteElement(this)"></div>
                                }
                                    <label asp-for="TechRegParagraphs[0].TechReg" class="control-label"></label>
                                    <div class="row">
                                        <div class="col-md">
                                            <select id="@TechRegParagraphs_TechRegId" asp-for="TechRegParagraphs[techRegCounter].TechRegId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this), setVisibility_paragraphs(this)" required>
                                                <option value="@techReg.TechReg?.Id" selected>@techReg.TechReg?.ShortName</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <a asp-controller="TechReg" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                                            <a asp-controller="TechReg" asp-action="Edit" asp-route-id="@techReg.TechReg?.Id" id="@(TechRegParagraphs_TechRegId + "Edit")" target="_blank" class="btn-icons-animation" target="_blank" style="@Html.Raw("display: " + (techReg.TechReg == null || techReg.TechReg.Id == 0 ? "none;" : "inline;"))"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                                            <a asp-controller="TechReg" asp-action="Details" asp-route-id="@techReg.TechReg?.Id" id="@(TechRegParagraphs_TechRegId + "Details")" target="_blank" class="btn-icons-animation" target="_blank" style="@Html.Raw("display: " + (techReg.TechReg == null || techReg.TechReg.Id == 0 ? "none;" : "inline;"))"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                                            <a asp-controller="TechReg" asp-action="Delete" asp-route-id="@techReg.TechReg?.Id" id="@(TechRegParagraphs_TechRegId + "Delete")" target="_blank" class="btn-icons-animation" target="_blank" style="@Html.Raw("display: " + (techReg.TechReg == null || techReg.TechReg.Id == 0 ? "none;" : "inline;"))"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md" id="@(TechRegParagraphs_TechRegId + "Paragraphs")" style="@Html.Raw("display: " + (String.IsNullOrWhiteSpace(techReg.Paragraphs) ? "none;" : "inline;"))">
                                    <label asp-for="TechRegParagraphs[0].Paragraphs" class="control-label"></label>
                                    <input id="@TechRegParagraphs_Paragraphs" asp-for="TechRegParagraphs[techRegCounter].Paragraphs" value="@techReg.Paragraphs" class="form-control" />
                                    <span asp-validation-for="@techReg.Paragraphs" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        ++techRegCounter;
                    }
                }
            </div>
            <br>
            <div class="form-group row col-md-12" id="tableTemplateGovStandard">
                <div class="row align-content-md-start">
                    <div class="col-md col-md-2">
                        <label asp-for="GovStandardParagraphs" class="control-label"></label>
                    </div>
                    <div class="col-md-3">
                        <div class="btn-sm btn-success col-md-3" onclick="addGovStandard()" onmouseover="" style="cursor: pointer;">Добавить</div>
                    </div>
                </div>
                @{
                    int govStandardCounter = 0;

                    if (Model.GovStandardParagraphs.Count == 0)
                        Model.GovStandardParagraphs.Add(new EffectCert.ViewModels.Main.GovStandardParagraphsViewModel());

                    foreach (var govStandard in Model.GovStandardParagraphs)
                    {
                        string rowTemplateGovStandard = "rowTemplateGovStandard" + (govStandardCounter == 0 ? String.Empty : govStandardCounter.ToString());
                        string GovStandardParagraphs_GovStandardId = $"GovStandardParagraphs{govStandardCounter}GovStandardId";
                        string GovStandardParagraphs_GovStandardIdEdit = $"GovStandardParagraphs{govStandardCounter}GovStandardIdEdit";
                        string GovStandardParagraphs_GovStandardIdDetails = $"GovStandardParagraphs{govStandardCounter}GovStandardIdDetails";
                        string GovStandardParagraphs_GovStandardIdDelete = $"GovStandardParagraphs{govStandardCounter}GovStandardIdDelete";
                        string GovStandardParagraphs_GovStandardIdParagraphs = $"GovStandardParagraphs{govStandardCounter}GovStandardIdParagraphs";
                        <div class="row align-content-between" id="@rowTemplateGovStandard">
                            <div class="row align-content-between">
                                <div class="col-md-6">
                                    @if (govStandardCounter > 0)
                                    {
                                        <div deletebtnptr="GovStandardDeleteBtn" class="btn btn-close btn-danger col-md-1" onmouseover="" style="cursor: pointer;" onclick="deleteElement(this)"></div>
                                    }
                                    <label asp-for="GovStandardParagraphs[0].GovStandard" class="control-label"></label>
                                    <div class="row">
                                        <div class="col-md">
                                            <select id="@GovStandardParagraphs_GovStandardId" asp-for="GovStandardParagraphs[govStandardCounter].GovStandardId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this), setVisibility_paragraphs(this)" required>
                                                <option value="@govStandard.GovStandard?.Id" selected>@govStandard.GovStandard?.Number</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <a asp-controller="GovStandard" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                                            <a asp-controller="GovStandard" asp-action="Edit" asp-route-id="@govStandard.GovStandard?.Id" id="@GovStandardParagraphs_GovStandardIdEdit" target="_blank" class="btn-icons-animation" target="_blank" style="@Html.Raw("display: " + (govStandard.GovStandard == null || govStandard.GovStandard.Id == 0 ? "none;" : "inline;"))"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                                            <a asp-controller="GovStandard" asp-action="Details" asp-route-id="@govStandard.GovStandard?.Id" id="@GovStandardParagraphs_GovStandardIdDetails" target="_blank" class="btn-icons-animation" target="_blank" style="@Html.Raw("display: " + (govStandard.GovStandard == null || govStandard.GovStandard.Id == 0 ? "none;" : "inline;"))"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                                            <a asp-controller="GovStandard" asp-action="Delete" asp-route-id="@govStandard.GovStandard?.Id" id="@GovStandardParagraphs_GovStandardIdDelete" target="_blank" class="btn-icons-animation" target="_blank" style="@Html.Raw("display: " + (govStandard.GovStandard == null || govStandard.GovStandard.Id == 0 ? "none;" : "inline;"))"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md" id="@GovStandardParagraphs_GovStandardIdParagraphs" style="@Html.Raw("display: " + (String.IsNullOrWhiteSpace(govStandard.Paragraphs) ? "none;" : "inline;"))">
                                    <label asp-for="GovStandardParagraphs[0].Paragraphs" class="control-label"></label>
                                    <input id="GovStandardParagraphs0Paragraphs" asp-for="GovStandardParagraphs[govStandardCounter].Paragraphs" value="@govStandard.Paragraphs" class="form-control" />
                                    <span asp-validation-for="@govStandard.Paragraphs" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        ++govStandardCounter;
                    }
                }
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CreateScriptsPartial");}
    @{await Html.RenderPartialAsync("_MainViewScripts");}
    <script src="~/js/main_application.js"></script>
    <script>
        $(document).ready(function() {
            let selectElements = [
                { id: '#AssessBodyId', url: '/AssessBody/GetAssessBodies/', placeholder: 'Выберите ОПС' },
                { id: '#ContractorLegalId', url: '/ContractorLegal/GetContractorLegals/', placeholder: 'Выберите юр.лицо' },
                { id: '#SchemaId', url: '/Schema/GetSchemas/', placeholder: 'Выберите схему' },
                { id: '#ProductsIds', url: '/Product/GetProducts/', placeholder: 'Выберите продукцию' },
                @{
                    int techRegCounter = 0;

                    if (Model.TechRegParagraphs.Count == 0)
                        Model.TechRegParagraphs.Add(new EffectCert.ViewModels.Main.TechRegParagraphsViewModel());

                    foreach (var techReg in Model.TechRegParagraphs)
                    {
                        string element = "{ id: '#TechRegParagraphs" + techRegCounter.ToString() + "TechRegId', url: '/TechReg/GetTechRegs/', placeholder: 'Выберите тех. регламент' },";
                        @Html.Raw(element);
                        ++techRegCounter;
                    }
                }
                { id: '#ProductQuantitiesIds', url: '/ProductQuantity/GetProductQuantities/', placeholder: 'Выберите партию продукции' }
            ];

            establishSelect2Algorithm(selectElements);
            InitializeBtnAnimation();
        });

        $(document).ready(function() {
            reInitializationSelect2();
        });

        techRegIdCounter = @techRegCounter - 1;
    </script>
}
