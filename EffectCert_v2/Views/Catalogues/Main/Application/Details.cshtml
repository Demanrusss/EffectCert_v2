@model EffectCert.ViewModels.Main.ApplicationViewModel

<h3>@ViewBag.Title</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ElectronicNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ElectronicNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ElectronicDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ElectronicDate.HasValue ? model.ElectronicDate.Value.ToShortDateString() : String.Empty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssessBody)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssessBody!.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContractorLegal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContractorLegal!.ShortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schema.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Products)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.Count)
            @foreach (var product in Model.Products)
            {
                @Html.Display(String.Format("{0}, {1}", product.Name, product.Manufacturer!.ShortName))
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
