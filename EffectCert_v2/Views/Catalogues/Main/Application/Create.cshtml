@model EffectCert.ViewModels.Main.ApplicationViewModel

<h3>@ViewBag.Title</h3>

<hr />
<div class="row">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-5">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" required id="number" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" required id="date" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="ElectronicNumber" class="control-label"></label>
                <input asp-for="ElectronicNumber" class="form-control" id="electronicNumber" />
                <span asp-validation-for="ElectronicNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="ElectronicDate" class="control-label"></label>
                <input asp-for="ElectronicDate" class="form-control" id="electronicdate" type="date" />
                <span asp-validation-for="ElectronicDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="AssessBody" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="AssessBodyId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="AssessBody" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Edit" asp-route-id="" id="AssessBodyIdEdit" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Details" asp-route-id="" id="AssessBodyIdDetails" style="display: none;" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Delete" asp-route-id="" id="AssessBodyIdDelete" style="display: none;" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="AssessBodyId" class="text-danger" id="AssessBodyIdWarning"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="ContractorLegal" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="ContractorLegalId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="ContractorLegal" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Edit" asp-route-id="" id="ContractorLegalIdEdit" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Details" asp-route-id="" id="ContractorLegalIdDetails" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegal" asp-action="Delete" asp-route-id="" id="ContractorLegalIdDelete" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ContractorLegalId" class="text-danger" id="ContractorLegalIdWarning"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Schema" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="SchemaId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this), hidePartyOrSerial(this)" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Schema" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="Schema" asp-action="Edit" asp-route-id="" id="SchemaIdEdit" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="Schema" asp-action="Details" asp-route-id="" id="SchemaIdDetails" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="Schema" asp-action="Delete" asp-route-id="" id="SchemaIdDelete" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="SchemaId" class="text-danger" id="SchemaIdWarning"></span>
            </div>
            <div class="form-group serial col-md-5">
                <label asp-for="Products" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="ProductsIds" class="form-control js-example-basic-multiple" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Product" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ProductsIds" class="text-danger" id="ProductsIdsWarning"></span>
            </div>
            <div class="form-group party col-md-5">
                <label asp-for="ProductQuantities" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="ProductQuantitiesIds" class="form-control js-example-basic-multiple" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="ProductQuantity" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ProductQuantitiesIds" class="text-danger" id="ProductQuantitiesIdsWarning"></span>
            </div>
            <div class="form-group party col-md-5">
                <label asp-for="Contracts" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="ContractsIds" class="form-control js-example-basic-multiple" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Contract" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ContractsIds" class="text-danger" id="ContractsIdsWarning"></span>
            </div>
            <div class="form-group party col-md-5">
                <label asp-for="GTDs" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="GTDsIds" class="form-control js-example-basic-multiple" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="GTD" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="GTDsIds" class="text-danger" id="GTDsIdsWarning"></span>
            </div>
            <div class="form-group party col-md-5">
                <label asp-for="Invoices" class="control-label"></label>
                <div class="row justify-content-between">
                    <div class="col-md">
                        <select asp-for="InvoicesIds" class="form-control js-example-basic-multiple" required>
                            <option></option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="Invoice" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="InvoicesIds" class="text-danger" id="InvoicesIdsWarning"></span>
            </div>
            <br>
            <div class="form-group row col-md-12" id="tableTemplateTechReg">
                <div class="row align-content-md-start">
                    <div class="col-md col-md-2">
                        <label asp-for="TechRegParagraphs" class="control-label"></label>
                    </div>
                    <div class="col-md-3">
                        <div deletebtnptr="TechRegDeleteBtn" class="btn-sm btn-success col-md-3" onclick="addTechReg()" onmouseover="" style="cursor: pointer;">Добавить</div>
                    </div>
                </div>
                <div class="row align-content-between" id="rowTemplateTechReg">
                    <div class="row align-content-between">
                        <div class="col-md-6">
                            <label asp-for="TechRegParagraphs[0].TechReg" class="control-label"></label>
                            <div class="row">
                                <div class="col-md">
                                    <select id="TechRegParagraphs0TechRegId" asp-for="TechRegParagraphs[0].TechRegId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this), setVisibility_paragraphs(this)" required>
                                        <option></option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <a asp-controller="TechReg" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                                    <a asp-controller="TechReg" asp-action="Edit" asp-route-id="" id="TechRegParagraphs0TechRegIdEdit" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                                    <a asp-controller="TechReg" asp-action="Details" asp-route-id="" id="TechRegParagraphs0TechRegIdDetails" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                                    <a asp-controller="TechReg" asp-action="Delete" asp-route-id="" id="TechRegParagraphs0TechRegIdDelete" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md" id="TechRegParagraphs0TechRegIdParagraphs" style="display: none;">
                            <label asp-for="TechRegParagraphs[0].Paragraphs" class="control-label"></label>
                            <input id="TechRegParagraphs0Paragraphs" asp-for="TechRegParagraphs[0].Paragraphs" class="form-control" />
                            <span asp-validation-for="TechRegParagraphs[0].Paragraphs" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="form-group row col-md-12" id="tableTemplateGovStandard">
                <div class="row align-content-md-start">
                    <div class="col-md col-md-2">
                        <label asp-for="GovStandardParagraphs" class="control-label"></label>
                    </div>
                    <div class="col-md-3">
                        <div deletebtnptr="GovStandardDeleteBtn" class="btn-sm btn-success col-md-3" onclick="addGovStandard()" onmouseover="" style="cursor: pointer;">Добавить</div>
                    </div>
                </div>
                <div class="row align-content-between" id="rowTemplateGovStandard">
                    <div class="row align-content-between">
                        <div class="col-md-6">
                            <label asp-for="GovStandardParagraphs[0].GovStandard" class="control-label"></label>
                            <div class="row">
                                <div class="col-md">
                                    <select id="GovStandardParagraphs0GovStandardId" asp-for="GovStandardParagraphs[0].GovStandardId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this), setVisibility_paragraphs(this)" required>
                                        <option></option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <a asp-controller="GovStandard" asp-action="Create" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                                    <a asp-controller="GovStandard" asp-action="Edit" asp-route-id="" id="GovStandardParagraphs0GovStandardIdEdit" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                                    <a asp-controller="GovStandard" asp-action="Details" asp-route-id="" id="GovStandardParagraphs0GovStandardIdDetails" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                                    <a asp-controller="GovStandard" asp-action="Delete" asp-route-id="" id="GovStandardParagraphs0GovStandardIdDelete" style="display: none;" target="_blank" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md" id="GovStandardParagraphs0GovStandardIdParagraphs" style="display: none;">
                            <label asp-for="GovStandardParagraphs[0].Paragraphs" class="control-label"></label>
                            <input id="GovStandardParagraphs0Paragraphs" asp-for="GovStandardParagraphs[0].Paragraphs" class="form-control" />
                            <span asp-validation-for="GovStandardParagraphs[0].Paragraphs" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <div class="form-group col-md-5">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CreateScriptsPartial");}
    @{await Html.RenderPartialAsync("_MainViewScripts");}
    <script src="~/js/main_application.js"></script>
    <script>
        $(document).ready(function() {
            let selectElements = [
                { id: '#AssessBodyId', url: '/AssessBody/GetAssessBodies/', placeholder: 'Выберите ОПС' },
                { id: '#ContractorLegalId', url: '/ContractorLegal/GetContractorLegals/', placeholder: 'Выберите юр.лицо' },
                { id: '#SchemaId', url: '/Schema/GetSchemas/', placeholder: 'Выберите схему' },
                { id: '#ProductsIds', url: '/Product/GetProducts/', placeholder: 'Выберите продукцию' },
                { id: '#ProductQuantitiesIds', url: '/ProductQuantity/GetProductQuantities/', placeholder: 'Выберите партию продукции' },
                { id: '#ContractsIds', url: '/Contract/GetContracts/', placeholder: 'Выберите контракт' },
                { id: '#GTDsIds', url: '/GTD/GetGTDs/', placeholder: 'Выберите ГТД' },
                { id: '#InvoicesIds', url: '/Invoice/GetInvoices/', placeholder: 'Выберите инвойс' },
                { id: '#TechRegParagraphs0TechRegId', url: '/TechReg/GetTechRegs/', placeholder: 'Выберите тех. регламент' },
                { id: '#GovStandardParagraphs0GovStandardId', url: '/GovStandard/GetGovStandards/', placeholder: 'Выберите ГОСТ' }
            ];

            establishSelect2Algorithm(selectElements);
            InitializeBtnAnimation();
        });
    </script>
}