@model IEnumerable<EffectCert.ViewModels.Main.IssueDecisionViewModel>

<h3>@ViewBag.Title</h3>

<p>
    <a asp-action="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Application)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certificate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Declaration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpertDecision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recommendation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date.ToShortDateString())
            </td>
            <td>
                №@Html.DisplayFor(modelItem => item.Application.Number) от @Html.DisplayFor(modelItem => item.Application.Date.ToShortDateString())
            </td>
            <td>
                №@Html.DisplayFor(modelItem => item.Certificate != null ? item.Certificate.Number : String.Empty) от @Html.DisplayFor(modelItem => item.Certificate != null ? item.Certificate.Date.ToShortDateString() : String.Empty)
            </td>
            <td>
                №@Html.DisplayFor(modelItem => item.Declaration != null ? item.Declaration.Number : String.Empty) от @Html.DisplayFor(modelItem => item.Declaration != null ? item.Declaration.Date.ToShortDateString() : String.Empty)
            </td>
            <td>
                №@Html.DisplayFor(modelItem => item.ExpertDecision.Number) от @Html.DisplayFor(modelItem => item.ExpertDecision.Date.ToShortDateString())
            </td>
            <td>
                №@Html.DisplayFor(modelItem => item.Recommendation.Number) от @Html.DisplayFor(modelItem => item.Recommendation.Date.ToShortDateString())
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
