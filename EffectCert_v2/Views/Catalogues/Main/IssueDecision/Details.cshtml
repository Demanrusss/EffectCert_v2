@model EffectCert.ViewModels.Main.IssueDecisionViewModel

<h3>@ViewBag.Title</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application)
        </dt>
        <dd class="col-sm-10">
            №@Html.DisplayFor(model => model.Application.Number) от @Html.DisplayFor(model => model.Application.Date.ToShortDateString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Certificate)
        </dt>
        <dd class="col-sm-10">
            №@Html.DisplayFor(model => model.Certificate != null ? model.Certificate.Number : String.Empty) от @Html.DisplayFor(model => model.Certificate != null ? model.Certificate.Date.ToShortDateString() : String.Empty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Declaration)
        </dt>
        <dd class="col-sm-10">
            №@Html.DisplayFor(model => model.Declaration != null ? model.Declaration.Number : String.Empty) от @Html.DisplayFor(model => model.Declaration != null ? model.Declaration.Date.ToShortDateString() : String.Empty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExpertDecision)
        </dt>
        <dd class="col-sm-10">
            №@Html.DisplayFor(model => model.ExpertDecision.Number) от @Html.DisplayFor(model => model.ExpertDecision.Date.ToShortDateString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recommendation)
        </dt>
        <dd class="col-sm-10">
            №@Html.DisplayFor(model => model.Recommendation.Number) от @Html.DisplayFor(model => model.Recommendation.Date.ToShortDateString())
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
