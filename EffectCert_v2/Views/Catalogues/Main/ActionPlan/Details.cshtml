@model EffectCert.ViewModels.Main.ActionPlanViewModel

<h3>@ViewBag.Title</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application)
        </dt>
        <dd class="col-sm-10">
            №@Html.DisplayFor(model => model.Application.Number) от @Html.DisplayFor(model => model.Application.Date.ToShortDateString())
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppAnalizeExpert)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppAnalizeExpert.ContractorLegalEmployee.ContractorIndividual.LastName) @Html.DisplayFor(model => model.AppAnalizeExpert.ContractorLegalEmployee.ContractorIndividual.FirstName[0])"."
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConformityAssessBodyHead)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConformityAssessBodyHead.ContractorLegalEmployee.ContractorIndividual.LastName) @Html.DisplayFor(model => model.ConformityAssessBodyHead.ContractorLegalEmployee.ContractorIndividual.FirstName[0])"."
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectProductEmployee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectProductEmployee != null ? model.SelectProductEmployee.ContractorIndividual.LastName : String.Empty) @Html.DisplayFor(model => model.SelectProductEmployee != null ? model.SelectProductEmployee.ContractorIndividual.FirstName[0] + "." : String.Empty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResultsAnalizeExpert)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResultsAnalizeExpert != null ? model.ResultsAnalizeExpert.ContractorLegalEmployee.ContractorIndividual.LastName : String.Empty) @Html.DisplayFor(model => model.ResultsAnalizeExpert != null ? model.ResultsAnalizeExpert.ContractorLegalEmployee.ContractorIndividual.FirstName[0] + "." : String.Empty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegDocumentEmployee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegDocumentEmployee != null ? model.RegDocumentEmployee.ContractorLegalEmployee.ContractorIndividual.LastName : String.Empty) @Html.DisplayFor(model => model.RegDocumentEmployee != null ? model.RegDocumentEmployee.ContractorLegalEmployee.ContractorIndividual.FirstName[0] + "." : String.Empty)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Изменить</a> |
    <a asp-action="Index">Назад к списку</a>
</div>
