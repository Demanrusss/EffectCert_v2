@model EffectCert.ViewModels.Main.ActionPlanViewModel

<h3>@ViewBag.Title</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" required id="number" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" required id="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="ApplicationId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.Application?.Id">@Model.Application?.Number</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="Application" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="Application" asp-action="Edit" asp-route-id="" id="ApplicationIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="Application" asp-action="Details" asp-route-id="" id="ApplicationIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="Application" asp-action="Delete" asp-route-id="" id="ApplicationIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ApplicationId" class="text-danger" id="ApplicationIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppAnalizeExpert" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="AppAnalizeExpertId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.AppAnalizeExpert?.Id">@Model.AppAnalizeExpert?.ContractorLegalEmployee?.ContractorIndividual?.LastName @Model.AppAnalizeExpert?.ContractorLegalEmployee?.ContractorIndividual?.FirstName</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="AssessBodyEmployee" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Edit" asp-route-id="" id="AppAnalizeExpertIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Details" asp-route-id="" id="AppAnalizeExpertIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Delete" asp-route-id="" id="AppAnalizeExpertIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="AppAnalizeExpertId" class="text-danger" id="AppAnalizeExpertIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConformityAssessBodyHead" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="ConformityAssessBodyHeadId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)" required>
                            <option value="@Model.ConformityAssessBodyHead?.Id">@Model.ConformityAssessBodyHead?.ContractorLegalEmployee?.ContractorIndividual?.LastName @Model.ConformityAssessBodyHead?.ContractorLegalEmployee?.ContractorIndividual?.FirstName</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="AssessBodyEmployee" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Edit" asp-route-id="" id="ConformityAssessBodyHeadIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Details" asp-route-id="" id="ConformityAssessBodyHeadIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Delete" asp-route-id="" id="ConformityAssessBodyHeadIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="SelectProductEmployeeId" class="text-danger" id="ConformityAssessBodyHeadIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectProductEmployee" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="SelectProductEmployeeId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)">
                            <option value="@Model.SelectProductEmployee?.Id">@Model.SelectProductEmployee?.ContractorIndividual?.LastName @Model.SelectProductEmployee?.ContractorIndividual?.FirstName</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="ContractorLegalEmployee" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegalEmployee" asp-action="Edit" asp-route-id="" id="SelectProductEmployeeIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegalEmployee" asp-action="Details" asp-route-id="" id="SelectProductEmployeeIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="ContractorLegalEmployee" asp-action="Delete" asp-route-id="" id="SelectProductEmployeeIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="SelectProductEmployeeId" class="text-danger" id="SelectProductEmployeeIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResultsAnalizeExpert" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="ResultsAnalizeExpertId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)">
                            <option value="@Model.ResultsAnalizeExpert?.Id">@Model.ResultsAnalizeExpert?.ContractorLegalEmployee?.ContractorIndividual?.LastName @Model.ResultsAnalizeExpert?.ContractorLegalEmployee?.ContractorIndividual?.FirstName</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="AssessBodyEmployee" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Edit" asp-route-id="" id="ResultsAnalizeExpertIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Details" asp-route-id="" id="ResultsAnalizeExpertIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Delete" asp-route-id="" id="ResultsAnalizeExpertIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ResultsAnalizeExpertId" class="text-danger" id="ResultsAnalizeExpertIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegDocumentEmployee" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="RegDocumentEmployeeId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)">
                            <option value="@Model.RegDocumentEmployee?.Id">@Model.RegDocumentEmployee?.ContractorLegalEmployee?.ContractorIndividual?.LastName @Model.RegDocumentEmployee?.ContractorLegalEmployee?.ContractorIndividual?.FirstName</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="AssessBodyEmployee" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Edit" asp-route-id="" id="RegDocumentEmployeeIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Details" asp-route-id="" id="RegDocumentEmployeeIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBodyEmployee" asp-action="Delete" asp-route-id="" id="RegDocumentEmployeeIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="RegDocumentEmployeeId" class="text-danger" id="RegDocumentEmployeeIdWarning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CreateScriptsPartial");}
    @{await Html.RenderPartialAsync("_MainViewScripts");}
    <script>
        $(document).ready(function () {
            let selectElements = [
                { id: '#ApplicationId', url: '/Application/GetApplications/', placeholder: 'Выберите заявку' },
                { id: '#AppAnalizeExpertId', url: '/AssessBodyEmployee/GetAssessBodyEmployees/', placeholder: 'Выберите эксперта' },
                { id: '#ConformityAssessBodyHeadId', url: '/AssessBodyEmployee/GetAssessBodyEmployees/', placeholder: 'Выберите сотрудника ОПС' },
                { id: '#SelectProductEmployeeId', url: '/ContractorLegalEmployee/GetContractorLegalEmployees/', placeholder: 'Выберите сотрудника' },
                { id: '#ResultsAnalizeExpertId', url: '/AssessBodyEmployee/GetAssessBodyEmployees/', placeholder: 'Выберите эксперта' },
                { id: '#RegDocumentEmployeeId', url: '/AssessBodyEmployee/GetAssessBodyEmployees/', placeholder: 'Выберите сотрудника ОПС' }
            ];

            establishSelect2Algorithm(selectElements);
        });
    </script>
}
