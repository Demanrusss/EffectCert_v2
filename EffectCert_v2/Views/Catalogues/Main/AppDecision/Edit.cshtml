                    </div>
                </div>
                <span asp-validation-for="InspectionLaboratoryId" class="text-danger" id="InspectionLaboratoryIdWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="InspectionPeriod" class="control-label"></label>
                <input asp-for="InspectionPeriod" class="form-control" id="inspectionPeriod" />
                <span asp-validation-for="InspectionPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchemaAnother" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="SchemaAnotherId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)">
                            <option value="@Model.SchemaAnother?.Id">@Model.SchemaAnother?.Name</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="Schema" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="Schema" asp-action="Edit" asp-route-id="" id="SchemaAnotherIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
