                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="AssessBody" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Edit" asp-route-id="" id="ProductionAnalyzeLaboratoryIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Details" asp-route-id="" id="ProductionAnalyzeLaboratoryIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="ActionPlan" asp-action="Delete" asp-route-id="" id="ProductionAnalyzeLaboratoryIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ProductionAnalyzeLaboratoryId" class="text-danger" id="ProductionAnalyzeLaboratoryIdWarning"></span>
            </div>
            <div class="form-group">
