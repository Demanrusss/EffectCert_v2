                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="ActionPlan" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="ActionPlan" asp-action="Edit" asp-route-id="" id="ActionPlanIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="ActionPlan" asp-action="Details" asp-route-id="" id="ActionPlanIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="ActionPlan" asp-action="Delete" asp-route-id="" id="ActionPlanIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ActionPlan" class="text-danger" id="ActionPlanWarning"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionAnalyzeAssessBody" class="control-label"></label>
                <div style="overflow-inline:hidden;">
                    <div style="width:78%; display:inline-block;">
                        <select asp-for="ProductionAnalyzeAssessBodyId" class="form-control js-example-basic-single" onchange="changeref(this), setVisibilityButtons(this)">
                            <option value="@Model.ProductionAnalyzeAssessBody?.Id">@Model.ProductionAnalyzeAssessBody?.ShortName</option>
                        </select>
                    </div>
                    <div style="display:inline-block;">
                        <a asp-controller="AssessBody" asp-action="Create" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-plus.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Edit" asp-route-id="" id="ProductionAnalyzeAssessBodyIdEdit" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-pencil.png" height="24" width="24" /></a>
                        <a asp-controller="AssessBody" asp-action="Details" asp-route-id="" id="ProductionAnalyzeAssessBodyIdDetails" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-info.png" height="24" width="24" /></a>
                        <a asp-controller="ActionPlan" asp-action="Delete" asp-route-id="" id="ProductionAnalyzeAssessBodyIdDelete" class="btn-icons-animation" target="_blank"><img src="~/icons/icons8-trash.png" height="24" width="24" /></a>
                    </div>
                </div>
                <span asp-validation-for="ProductionAnalyzeAssessBodyId" class="text-danger" id="ProductionAnalyzeAssessBodyIdWarning"></span>
            </div>
            <div class="form-group">
