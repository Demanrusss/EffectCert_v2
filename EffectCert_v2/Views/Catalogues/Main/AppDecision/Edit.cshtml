</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CreateScriptsPartial");}
    @{await Html.RenderPartialAsync("_MainViewScripts");}
    <script>
        $(document).ready(function () {
            let selectElements = [
                { id: '#ApplicationId', url: '/Application/GetApplications/', placeholder: 'Выберите заявку' },
                { id: '#ActionPlanId', url: '/ActionPlan/GetActionPlans/', placeholder: 'Выберите план действий' },
                { id: '#ProductionAnalyzeAssessBodyId', url: '/AssessBody/GetAssessBodies/', placeholder: 'Выберите ОПС' },
                { id: '#ProductionAnalyzeLaboratoryId', url: '/Laboratory/GetLaboratories/', placeholder: 'Выберите лабораторию' },
                { id: '#InspectionAssessBodyId', url: '/AssessBody/GetAssessBodies/', placeholder: 'Выберите ОПС' },
                { id: '#InspectionLaboratoryId', url: '/Laboratory/GetLaboratories/', placeholder: 'Выберите лабораторию' },
                { id: '#SchemaAnotherId', url: '/Schema/GetSchemas/', placeholder: 'Выберите схему' }
            ];

            establishSelect2Algorithm(selectElements);
        });
    </script>
}
